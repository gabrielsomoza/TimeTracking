{{#if session.attemptedTransition}}
    {{bs-alert type='alert-danger' heading='Unauthorized' message='Please login to continue.'}}
{{/if}}
<div class="page-header">
	<h1>Register</h1>
</div>
{{#unless session.isAuthenticated}}
<div class="row">
    <div class="col-md-5 col-sm-6 col-lg-4">
        <p>No account yet? Use the form below to register.</p>
        <form id="registerForm" role="form" {{action 'register' on='submit'}}>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group">
                        <label for="register-username">Username</label>
                        {{input type="text" class="form-control" id="register-username" value=registerUsername}}
                    </div>
                    <div class="form-group">
                        <label for="register-password">Password</label>
                        {{input type="password" class="form-control" id="register-password" value=registerPassword}}
                    </div>
                </div>
                <div class="panel-footer clearfix">
                    <button id="registerButton" type="submit"
                        {{bind-attr class=":btn :btn-lg :btn-warning isWaitingRegister:disabled"}}>
                        {{#if isWaitingRegister}}
                            Creating Account...
                        {{else}}
                            Register
                        {{/if}}
                    </button>
                    <div class="pull-right">
                        <span>Already a user?&nbsp;&nbsp;</span>
                        <a id="loginButton" class="btn btn-info" {{action login}}>Login</a>
                    </div>
                </div>
            </div>
            {{#if errorMessage}}
                {{bs-alert type='alert-danger' message=errorMessage.message}}
            {{/if}}
        </form>
    </div>
</div>
{{else}}
    You're already logged in!
{{/unless}}


