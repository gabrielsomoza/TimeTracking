<div class="page-header">
    <h1><span class="glyphicon glyphicon-user"></span> My Account</h1>
</div>
<div class="row">
    <div class="col-sm-12 col-md-8 col-lg-6">
        {{#em-form form_layout="horizontal" model=model action="submit"}}
            <div class="form-group has-feedback">
                <label class="control-label col-sm-2">Username</label>
                <div class="col-sm-10">
                    <p class="form-control-static">{{model.id}}</p>
                    <input type="hidden" name="user[id]" {{bind-attr value="model.id"}} />
                </div>
            </div>
            {{em-input property="firstName" label="First Name" placeholder="Your first name"}}
            {{em-input property="lastName" label="Last Name" placeholder="Your last name"}}
            {{em-input property="dayLength" label="Hours Per Day" placeholder="Preferred working hour per day" type="number" }}
            {{em-input property="newPassword" label="Password" placeholder="Change password..." type="password"}}
        {{/em-form}}
    </div>
</div>
